<% provide(:title, 'All Customers') %>
	<h1> All Customers </h1>
	
	<div class="inline">

		<%= form_for :find_customer, url: find_customers_path do |f| %>
			<%= f.text_field :first_name, :size => "15", :placeholder=>"First Name" %>
			<%= f.text_field :last_name, :size => "15", :placeholder=>"Last Name" %>
			<%= f.text_field :middle_name, :size => "15", :placeholder=>"Middle Name" %>
			<%= f.submit "Find", class: "btn" %>
		<% end %>

	</div>

	<% if @customers.any? %>
	<div class="pagination pagination-centered">
  	<%= will_paginate @customers %>
  	</div>
	<table>
		<tr>
	    	<td> First name </td> 
			<td> Last name </td> 
			<td> Middle name </td>
			<td> Phone number </td>
			<td> Profile link </td>
			<td> Edit link </td>
			<td> Delete link </td>
		</tr> 
		<% @customers.each do |customer| %>
		<tr>
			<td> <%= customer.first_name %> </td> 
			<td> <%= customer.last_name %> </td> 
			<td> <%= customer.middle_name %> </td> 
			<td> <%= customer.phone_number %> </td>
			<td> <%= link_to 'Profile', show_customer_path(:id => customer)   %> </td>
			<td> <%= link_to 'Edit', edit_customer_path(customer) %> </td>
			<td> <%= link_to 'Delete', customer, method: :delete %> </td>		
		</tr>
		<% end %>
	</table>
	<div class="pagination pagination-centered">
  	<%= will_paginate @customers %>
  	</div>
	<% else %>
	<p> There is no customers in base </p>
	<% end %>


