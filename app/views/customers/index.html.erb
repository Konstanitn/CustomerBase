<% provide(:title, 'All Customers') %>
	<h1> All Customers </h1>
	<% if @customers.any? %>
	<%= will_paginate %>
	<table>
		<tr>
	    	<td> First name </td> 
			<td> Last name </td> 
			<td> Middle name </td>
			<td> Phone number </td>
			<td> Profile link </td>
			<td> Edit link </td>
			<td> Delete link </td>
		</tr> 
		<% @customers.each do |customer| %>
		<tr>
			<td> <%= customer.first_name %> </td> 
			<td> <%= customer.last_name %> </td> 
			<td> <%= customer.middle_name %> </td> 
			<td> <%= customer.phone_number %> </td>
			<td> <%= link_to 'Profile', show_customer_path(:id => customer)   %> </td>
			<td> <%= link_to 'Edit', edit_customer_path(customer) %> </td>
			<td> <%= link_to 'Delete', customer, method: :delete %> </td>		
		</tr>
		<% end %>
	</table>
	<%= will_paginate %>
	<% else %>
	<p> There is no customers in base </p>
	<% end %>


